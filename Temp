export function convertEnzymeToRTL(enzymeCode) {
  let rtlCode = enzymeCode;

  // Match entire test case blocks
  rtlCode = rtlCode.replace(
    /(it\([^)]*\{)([\s\S]*?)(\}\);)/g,
    (match, testStart, testBody, testEnd) => {
      // Check if "snapshot" exists in the test body
      if (/snapshot/i.test(testBody)) {
        // Retain the test case as-is if "snapshot" is present
        return match;
      }

      // If no snapshot, remove only "const component = " from the render call
      const updatedBody = testBody.replace(
        /const\s+component\s*=\s*/g,
        ""
      );
      return `${testStart}${updatedBody}${testEnd}`;
    }
  );

  return rtlCode;
}
