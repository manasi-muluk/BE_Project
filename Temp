export function convertEnzymeToRTL(enzymeCode) {
  let rtlCode = enzymeCode;

  // Match all instances of `const component = render(...)`
  rtlCode = rtlCode.replace(
    /(it\([^)]*{[\s\S]*?)(const\s+component\s*=\s*render\([\s\S]*?\);)/g,
    (match, testStart, componentAssignment) => {
      // Check if the test body contains the word "snapshot"
      if (/snapshot/i.test(match)) {
        return match; // Keep the component assignment
      }
      // Otherwise, remove the component assignment
      return testStart;
    }
  );

  return rtlCode;
}
